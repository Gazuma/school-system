<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class = "text-center">New Activity</h1>
    <div class = "col-6 offset-3">
        <form action="/student_profile/<%=record._id%>" method = "POST">
            <div class="mb-3">
                <label for="form-label" for="title">
                    Activity Title :
                </label>
                <textarea class = "form-control" type="text" name="Activity[title]" id="title" placeholder = "Enter Activity Description" required></textarea>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label for="form-label" for="description">
                    Activity Description :
                </label>
                <textarea class = "form-control" type="text" name="Activity[description]" id="description" placeholder = "Enter Activity Description" required></textarea>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label for="form-label" for="hours">
                    Hours :
                </label>
                <input class = "form-control" type="number" name="Activity[hours]" id="hours" placeholder = "Enter Number of Hours " required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            
            <button class = "btn btn-success">Add Activity</button>
        </form>
    </div>
</div>